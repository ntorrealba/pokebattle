<div class= "bg-battle" id="page-battle-index">
  <%= audio_tag 'pokemon-battle', controls: true, id: 'battle-audio', loop: true, autoplay: true%>
  <div class= "h-2/4 relative  ">

    <div class="flex justify-between pt-12 px-8 pb-48">
      <div class="flex flex-col">

        <div id="btn-back"class=""><a href=""><svg width="20" height="22" viewBox="0 0 22 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M0.939341 10.9393C0.353554 11.5251 0.353554 12.4749 0.939341 13.0607L10.4853 22.6066C11.0711 23.1924 12.0208 23.1924 12.6066 22.6066C13.1924 22.0208 13.1924 21.0711 12.6066 20.4853L4.12132 12L12.6066 3.51472C13.1924 2.92893 13.1924 1.97919 12.6066 1.3934C12.0208 0.807611 11.0711 0.807611 10.4853 1.3934L0.939341 10.9393ZM22 10.5L2 10.5V13.5L22 13.5V10.5Z" fill="#FEFEFE"/></svg></a></div>

        <div class="mt-16 text-white text-left text-3xl font-semibold capitalize mb-10 ">Batalla</div>

        <div class="flex flex-items-center mb-30">

          <div class="bg-white rounded-3xl text-white text-base text-center font-medium w-28 px-1 py-0.5 bg-opacity-20 capitalize mr-2 ">
            <%= @pokemon.name %>
          </div>
          <p class="text-white font-medium mr-2">vs</p>
          <div class="bg-white rounded-3xl text-white text-base text-center font-medium w-28 px-1 py-0.5 bg-opacity-20 capitalize ">
            <%= @game.name %>
          </div>
        </div>
      </div>

    </div>

    <div  class="absolute top-24 right-20">
      <div id="battle" class="relative">
        <%= render 'layouts/battlefield' %>

        <div id="pokemon2" class="px-10 absolute top-32 right-56 flex flex-col z-30"><%= image_tag @game.image_battle, size:"300" %></div>
        <div id="base2" class="absolute  top-80 right-56 flex flex-col z-20">
          <%= render 'layouts/oneground' %>
        </div>

        <div id="pokemon1" class="px-20 absolute bottom-48 left-40 z-30"><%= image_tag @pokemon.images[2], size:"300"%></div>
        <div id="base1" class="absolute bottom-48 left-40 flex flex-col z-20">
          <%= render 'layouts/twoground' %>
        </div>
      </div>

    </div>
  </div>

  <div class="mt-30 bg-white rounded-t-3xl pb-24 z-10">
    <div class="flex flex-col items-center">

      <div class="pt-72 px-60 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-24 ">
        <% four_moves = @pokemon.moves.take(4) %>
        <% four_moves.each do |move| %>
          <button class=" block w-44 h-12 text-center rounded-full border border-transparent bg-battle px-4  py-2 text-center text-xl font-medium text-white hover:bg-indigo-800 mt-20 capitalize button-move" aria-describedby="tier-hobby"><%= move[0] %> </button>
        <%end%>
      </div>
    </div>
  </div>
</div>