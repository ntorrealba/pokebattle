<%= render 'layouts/navigation' %>
  <div class="bg-white px-8 h-auto mb-16 mx-8 px-52 py-12">

    <div class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate text-center mb-12">Bienvenido</div>

    <%= form_with model: @user, class: "space-y-8 ", id: "user_form" do |form| %>

      <div class="space-y-8 divide-y divide-gray-200">

        <div class="mb-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900">
            Perfil
          </h3>
          <p class="mt-1 text-sm text-gray-500">
            Esta informacion puede ser publica recuerda ser cuidadoso.
          </p>
        </div>

        <div class="sm:col-span-6">
          <div class="mt-1 flex items-center">
            <div>
              <svg width="54" height="54" viewBox="0 0 128 128" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M94.8572 70.2576C92.5306 85.1706 79.5919 96.589 63.9592 96.589C48.3266 96.589 35.3878 85.1706 33.0613 70.2576H0.00012207C3.14298 102.644 30.6123 128 64.0001 128C97.3878 128 124.816 102.644 128 70.2576H94.8572Z" fill="#d1d1d1" fill-opacity=""/>
              <path d="M64 89.7866C77.2548 89.7866 87.9999 79.0892 87.9999 65.8933C87.9999 52.6974 77.2548 42 64 42C50.7452 42 40 52.6974 40 65.8933C40 79.0892 50.7452 89.7866 64 89.7866Z" fill="#d1d1d1" fill-opacity=""/>
              <path d="M33.6734 57.7422C37.1428 44.292 49.3877 34.3365 63.9999 34.3365C78.6122 34.3365 90.8571 44.292 94.2856 57.7422H127.959C124.816 25.3562 97.3468 0 63.9999 0C30.6122 0 3.14285 25.3562 0 57.7422H33.6734Z" fill="#CC0000" fill-opacity=""/>
              </svg>
            </div>
            <div class="ml-5 bg-white py-2 px-3 border border-gray-300 rounded-md shadow-sm text-sm leading-4 font-medium text-gray-700">
              Principiante
            </div>
          </div>
        </div>

        <div class="pt-8">
          <div>
            <p class="mt-1 text-sm text-gray-500">
                Completa los siguientes campos:
            </p>
          </div>
          <div class="mt-6 mb-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
            <div class="sm:col-span-3">
              <%= form.label :first_name, "Nombre", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1 rounded-md border-gray-300 border">
              <%= form.text_field :name, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md px-2 h-9" %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= form.label :last_name, "Apellido", class: "block text-sm font-medium text-gray-700"%>
              <div class="mt-1 rounded-md border-gray-300 border ">
                <%= form.text_field :last_name, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md px-2 h-9" %>
              </div>
            </div>

            <div class="sm:col-span-4">
              <%= form.label :email, "Email", class:"block text-sm font-medium text-gray-700" %>
              <div class="mt-1 rounded-md border-gray-300 border">
                <%= form.email_field :email, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md px-2 h-9" %>
              </div>
            </div>
          </div>
          <div class="mt-4 flex-shrink-0 flex md:mt-0 md:ml-4">
              <button type="button" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
              <a href="/users">Cancelar</a>
              </button>
              <button type="submit" class="ml-3 inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" form="user_form">
                Guardar
              </button>
            </div>

        </div>
      </div>
    <% end %>
  </div>
